# =============================================================================
# Watchtower (Vagt) - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# IMPORTANT: Generate a new secret key for production!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=change-me-in-production

# Set to False in production
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Django settings module
# Development: config.settings.development
# Production:  config.settings.production
DJANGO_SETTINGS_MODULE=config.settings.development

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------

# SQLite (default): sqlite:///db.sqlite3
# Docker SQLite:    sqlite:////data/db.sqlite3
# PostgreSQL:       postgres://user:password@localhost:5432/watchtower
DATABASE_URL=sqlite:///db.sqlite3

# -----------------------------------------------------------------------------
# Security (Production only)
# -----------------------------------------------------------------------------

# Enable SSL redirect (set to False if behind a reverse proxy that handles SSL)
# DJANGO_SECURE_SSL_REDIRECT=True

# HSTS max-age in seconds (1 year = 31536000)
# DJANGO_SECURE_HSTS_SECONDS=31536000

# CSRF trusted origins (for cross-origin requests)
# DJANGO_CSRF_TRUSTED_ORIGINS=https://vagt.fynbus.net

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO

